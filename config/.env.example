# Server Port
PORT=5000

# Environment (e.g., DEV, PROD)
NODE_ENV=DEV

# Database - Replace with your own MongoDB connection string
DB_URL=mongodb+srv://<username>:<password>@cluster0.jnqq8.mongodb.net/<your-database-name>

# Password Hashing - Number of salt rounds for bcrypt (default is 10)
SALT=10

# Email Configuration - Used for sending system emails
EMAIL=<your-email-address>
PASSWORD=<your-email-app-password>

# JWT Configuration
# Access token expiration time in seconds (e.g., 86400 = 1 day)
EXPIRES_IN=86400

# Refresh token expiration time in seconds (e.g., 31536000 = 1 year)
REFRESH_EXPIRES_IN=31536000

# JWT Secret Keys - Replace with strong random strings
USER_ACCESS_SIGNATURE=<your-user-access-secret>
USER_REFRESH_SIGNATURE=<your-user-refresh-secret>
ADMIN_ACCESS_SIGNATURE=<your-admin-access-secret>
ADMIN_REFRESH_SIGNATURE=<your-admin-refresh-secret>